<div class="row-fluid highlight">
  <div class="span8">
    <b><%= link_to entity.name, mtype + "s/" + CGI.escape(entity.name) %></b>
  </div>
  <% for measurement in Measurement.find_all_by_mtype(mtype) %>
    <div class="span1">
      <% value = entity.measurement_values.latest.find_by_measurement_id(measurement).value %>
      <% if value.nil? %>
        -
      <% else %>
        <%= link_to entity.measurement_values.latest.find_by_measurement_id(measurement).value,
            measurement.url + CGI.escape(entity.name), :target => "_blank" %>
      <% end %>
    </div>
  <% end %>
</div>
